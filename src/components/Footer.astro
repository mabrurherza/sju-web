---
import ButtonPrimary from "./ButtonPrimary.astro";
import menus from "./MenuList";
---

<footer
  class="min-h-[400px] bg-blue-50 px-5 pt-10 flex flex-col md:flex-row gap-5"
>
  <section
    class="flex flex-col gap-7 min-w-0 md:min-w-96 mr-0 md:mr-12 border-b border-slate-300 pb-10 md:pb-0 md:border-none"
  >
    <a href="/">
      <img
        src="/assets/SJU-logo-horizontal-color.svg"
        loading="lazy"
        alt="Main logo of Sandy Jaya Utama"
        class="w-56"
      />
    </a>
    <h2 class="text-3xl font-thin leading-tight text-blue-950">
      Industrial Pump, <br />Mechanical& Electrical
    </h2>
    <ButtonPrimary
      text="Contact via WA"
      link="whatsapp://send?phone=+6287817002400"
    />
  </section>

  <section
    class="flex-1 flex flex-col gap-5 md:flex-col items-end justify-between"
  >
    <div
      class="flex flex-col gap-5 md:flex-row w-full justify-end max-w-screen-lg"
    >
      <div class="w-full max-w-96">
        <p class="font-medium mb-2">Office</p>
        <ul>
          <li>
            <a
              class="link-primary"
              href="https://maps.app.goo.gl/jxcpp2aYMHP9SK5m6"
              target="_blank"
              >Komplek Harapan Baru Taman Bunga <br />Blok A5 / 23-24,
              Harjamukti,
              <br />Cimanggis, Depok
              <br />16956</a
            >
          </li>
        </ul>
      </div>
      <div class="w-full max-w-96">
        <ul>
          <p class="font-medium mb-2">Call</p>

          <li>
            <a class="link-primary tabular-nums" href="tel:+622187757068"
              >+62 21873 1057
            </a>
          </li>
          <li>
            <a class="link-primary tabular-nums" href="tel:+622187757068"
              >+62 21873 1531
            </a>
          </li>
          <li></li>
        </ul>
      </div>
      <div class="w-full max-w-96">
        <p class="font-medium mb-2">Links</p>
        <ul>
          {
            menus.map((menu) => {
              return (
                <li>
                  <a class="link-primary" href={menu.link}>
                    {menu.menu}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </div>
    </div>

    <div class="w-full pt-5 border-t border-slate-300 max-w-screen-lg">
      <p class="text-xs text-slate-500 pb-3 w-full">
        2024 Â© Sandy Jaya Utama. All rights reserved
      </p>
    </div>
  </section>
</footer>
